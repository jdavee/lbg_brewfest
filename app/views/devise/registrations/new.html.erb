<div class="row">
  <div class="col-lg-6 offset-lg-3">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>
      <div class="card mb-4">
        <div class="card-header m-2">
          <h2 class="text-center">Sign Up</h2>
        </div>
        <div class="card-body">

          <div class="mb-3">
            <%= f.text_field :username, autofocus: false, class: 'form-control', placeholder: "Username" %>
          </div>

          <div class="mb-3">
            <%= f.password_field :password, autocomplete: "off", class: 'form-control', placeholder: 'Password' %>
          </div>

          <div class="mb-3">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: 'form-control', placeholder: 'Confirm Password' %>
          </div>

          <hr class="text-primary border-3 opacity-100" />

          <div class="mb-4" data-controller="visibility">
          <label class="d-block">Are you a current LBG member?</label>
          <span class="small text-danger d-block mb-3"> * Membership required to submit beer donations</span>
          <%= content_tag("a", "Yes", class: "btn btn-outline-primary", "data-action": "visibility#showTargets", "data-visibility-target": "yes") %>
          <%= content_tag("a", "No", class: "btn btn-primary", "data-action": "visibility#hideTargets", "data-visibility-target": "no") %>
            <div class="mt-2" data-visibility-target="hideable" hidden>
              <div class="alert alert-danger text-center">
                <h5><b>Accounts have already been created for current LBG members. Please attempt <a href="/users/sign_in">logging in</a> first.</b></h5>  
                <br/>
                If you have recently become a member or are unable to login, then enter the secret phrase below to gain access to beer donation submission.
                If you don't know the secret phrase, please <a href="mailto:info@lawrencebrewers.org">contact us</a> or reach out to an LBG officer.
              </div>
              <%= f.text_field :lbg_secret, autofocus: false, class: 'form-control', placeholder: "Enter LBG Secret Phrase", id: "test" %>
            </div>
          </div>

          <hr class="text-primary border-3 opacity-100" />

          <div class="mb-4 d-grid">
            <%= f.submit "Sign up", class: "btn btn-primary btn-lg" %>
          </div>

          <div class="text-center">
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>