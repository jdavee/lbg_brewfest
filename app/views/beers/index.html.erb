


<div class="row">
  <div class="col-sm-6">
    <h1>Beers</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_beer_path, class: 'btn btn-primary' do %>
    Add New Beer
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @beers.each do |beer| %>
        <%= content_tag :tr, id: dom_id(beer), class: dom_class(beer) do %>
          

          
          
            <td><%= link_to 'Show', beer %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
