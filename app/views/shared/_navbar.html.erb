<% if current_user != true_user %>
  <div class="alert alert-warning text-center">
    You're logged in as <b><%= current_user.name %> (<%= current_user.email %>)</b>
    <%= link_to stop_impersonating_madmin_impersonates_path, method: :post do %><%= icon("fas", "times") %> Logout <% end %>
  </div>
<% end %>

<nav class="navbar navbar-expand-md navbar-dark bg-primary">
  <div class="container mx-auto">
    <%= link_to root_path, class: "navbar-brand" do %>
      <%= image_tag asset_path('BrewFest_Logo.png'), height: 120 %>
    <% end %>

    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarMain" aria-controls="navbarsExample04" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>

    <div class="collapse navbar-collapse" id="navbarMain">
      <ul class="navbar-nav me-auto mt-2 mt-md-0">
      </ul>

      <ul class="navbar-nav">
        <li class="nav-item dropdown">
          <%= link_to "#", class: "nav-link dropdown-toggle", data: { target: "event-dropdown", bs_toggle: "dropdown"}, aria: {haspopup: true, expanded: false} do %>
            <span>Event Details</span>
          <% end %>
          <div id="event-dropdown" class="dropdown-menu dropdown-menu-end" aria-labelledby="navbar-dropdown">
            <%= link_to "General Info", root_path, class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "Location", root_path, class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "Schedule", root_path, class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "Camping", root_path, class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "Rules", root_path, class: "dropdown-item" %>
          </div>
        </li>
        <li class="nav-item dropdown">
          <%= link_to "#", class: "nav-link dropdown-toggle", data: { target: "beer-dropdown", bs_toggle: "dropdown"}, aria: {haspopup: true, expanded: false} do %>
            <span>Beer</span>
          <% end %>
          <div id="beer-dropdown" class="dropdown-menu dropdown-menu-end" aria-labelledby="navbar-dropdown">
            <%= link_to "Participating Breweries", root_path, class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "Flight Schedule", root_path, class: "dropdown-item" %>
            <div class="dropdown-divider"></div>
            <%= link_to "Track and Rate Beers", root_path, class: "dropdown-item" %>
          </div>
        </li>
        <li class="nav-item">
          <%= link_to "#", class: "nav-link" do %>
            <span>Live Music</span>
          <% end %>
        </li>
        <li class="nav-item"><%= link_to "Announcements", announcements_path, class: "nav-link #{unread_announcements(current_user)}" %></li>
        <% if user_signed_in? %>

          <li class="nav-item">
            <%= link_to notifications_path, class: "nav-link" do %>
              <span><i class="far fa-bell" aria-hidden="true"></i></span>
            <% end %>
          </li>

          <li class="nav-item dropdown">
            <%= link_to "#", id: "navbar-dropdown", class: "nav-link dropdown-toggle", data: { target: "nav-account-dropdown", bs_toggle: "dropdown" }, aria: { haspopup: true, expanded: false } do %>
              <%= image_tag avatar_path(current_user, size: 40), height: 20, width: 20, class: "rounded" %>
            <% end %>
            <div id="nav-account-dropdown" class="dropdown-menu dropdown-menu-end" aria-labelledby="navbar-dropdown">
              <%= link_to "Beer Management", "#", class: "dropdown-item" %>
              <div class="dropdown-divider"></div>
              <%= link_to "Edit Profile", edit_user_registration_path, class: "dropdown-item" %>
              <% if current_user.admin? && respond_to?(:madmin_root_path) %>
                <div class="dropdown-divider"></div>
                <%= link_to "Admin Area", madmin_root_path, class: "dropdown-item" %>
              <% end %>
              <div class="dropdown-divider"></div>
              <%= button_to "Logout", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
            </div>
          </li>

        <% else %>
          <li class="nav-item"><%= link_to "Login", new_user_session_path, class: "nav-link" %></li>
        <% end %>
      </ul>
    </div>
  </div>
</nav>
