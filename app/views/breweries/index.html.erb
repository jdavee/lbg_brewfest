


<div class="row">
  <div class="col-12 text-center">
    <h1>2023 Breweries and Beers</h1>
  </div>
</div>

<div class="row">
  <div class="col-sm-12 text-end">
  <%= link_to new_brewery_path, class: 'btn btn-primary' do %>
    Add New Brewery
  <% end %>
  </div>
</div>

<div class="card mt-2">
  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <thead>
        <tr>
          <th>Brewery Name</th>
          <th>Member Name</th>
          <th>Description</th>
          <th># of Beers</th>
        </tr>
      </thead>
      <tbody>
        <% @breweries.each do |brewery| %>
          <%= content_tag :tr, id: dom_id(brewery), class: dom_class(brewery) do %>
            <td><%= brewery.name %></td>
            <td><%= brewery.member_name %></td>
            <td><%= brewery.description %></td>
            <td><%= brewery&.beers.count %></td>
            <td><%= link_to 'Show', brewery %></td>
            
          <% end %>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
