


<div class="row">
  <div class="col-sm-6">
    <h1>Breweries</h1>
  </div>

  <div class="col-sm-6 text-end">
  <%= link_to new_brewery_path, class: 'btn btn-primary' do %>
    Add New Brewery
  <% end %>
  </div>
</div>

<div class="table-responsive">
  <table class="table table-striped table-bordered table-hover">
    <thead>
      <tr>
    

            
          <th></th>
        
      </tr>
    </thead>

    <tbody>
      <% @breweries.each do |brewery| %>
        <%= content_tag :tr, id: dom_id(brewery), class: dom_class(brewery) do %>
          

          
          
            <td><%= link_to 'Show', brewery %></td>
          
        <% end %>
      <% end %>
    </tbody>
  </table>
</div>
